{
  "version": "0.2.2",
  "name": "primer-buttons",
  "description": "A collection of buttons used for primary and secondary actions.",
  "homepage": "http://primercss.io/",
  "author": "GitHub, Inc.",
  "license": "MIT",
  "style": "index.scss",
  "files": [
    "index.scss",
    "lib",
    "build"
  ],
  "repository": "https://github.com/primer/buttons.git",
  "bugs": {
    "url": "https://github.com/primer/buttons/issues"
  },
  "scripts": {
    "setup": "if [ ! -d \"node_modules\" ]; then npm install; fi",
    "build": "node-sass index.scss --include-path node_modules --output-style compressed | postcss -c .postcss.json -o build/build.css",
    "prepublish": "npm run setup && npm run build",
    "test": "stylelint **/*.scss -c .stylelintrc.json -s scss"
  },
  "dependencies": {
    "primer-support": "*"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "node-sass": "^3.7.0",
    "postcss-cli": "^2.5.2",
    "stylelint": "^6.5.1",
    "stylelint-scss": "^1.1.1",
    "stylelint-selector-no-utility": "^1.1.0"
  },
  "keywords": [
    "primer",
    "css",
    "github",
    "primercss",
    "buttons",
    "styles"
  ]
}
